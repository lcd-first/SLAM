<launch>

    <!-- bag的地址与名称 -->
    <arg name="bag_filename" default="/home/lcd/bagfiles/lesson1.bag"/>

    <!-- 使用bag的时间戳 -->
    <param name="use_sim_time" value="true" />

    <!-- 启动节点 -->
    <node name="scan_to_pointcloud2_converter_node"
        pkg="ros2pcl" type="ros2pcl_scan_to_pointcloud2_converter_node" output="screen" />
    
    <!-- launch rviz -->
    <node name="rviz" pkg="rviz" type="rviz" required="false"
        args="-d $(find ros2pcl)/launch/scan2pointcloud.rviz" />

    <!-- play bagfile -->
    <node name="playbag" pkg="rosbag" type="play"
        args="--clock $(arg bag_filename)" />

</launch>
